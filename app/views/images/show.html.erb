<div id="image-<%= @image.id %>">
    <% provide(:title, @image.title) %>
    <h3>Image</h3>
    <ol class="microposts">
    <%= render @image %>
    </ol>
    <div class="">
        <%= render 'like_form' if logged_in?%>
    </div>
    <div class="">
        <%= render 'shared/comment_form' if logged_in?%>
    </div>
    <div class="col-md-8">
        <% if @image.comments.any? %>
          <ol class="microposts">
          	<div id = 'comments'>
    	        <%= render @comments %>
    	   	</div>
           </ol>
          <%= will_paginate @comments %>
        <% end %>
    </div>
</div>
