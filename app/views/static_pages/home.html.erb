<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
			<%= render 'shared/user_info' %>
			</section>
			<section class="stats">
			<%= render 'shared/stats' %>
			</section>
			<section class="micropost_form">
			<%= render 'shared/image_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Image Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<section class="micropost_form">
        <%= render 'shared/feed' %>
    </section>
<% end %>